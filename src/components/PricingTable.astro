<style>
  .pricing-section {
    padding: 4rem 2rem;
    background-color: var(--bg-card);
  }

  .pricing-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .pricing-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    text-align: center;
    margin: 0 0 1rem 0;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pricing-subtitle {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .location-selector {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .location-btn {
    padding: 0.75rem 1.5rem;
    background-color: var(--bg-dark);
    border: 2px solid rgba(210, 10, 15, 0.3);
    border-radius: 8px;
    color: var(--text-light);
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .location-btn:hover {
    border-color: var(--primary-red);
    background-color: rgba(210, 10, 15, 0.1);
    transform: translateY(-2px);
  }

  .location-btn.active {
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    border-color: var(--primary-red);
    color: var(--white);
    box-shadow: 0 4px 12px rgba(210, 10, 15, 0.4);
  }

  .location-pricing {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pricing-table {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .pricing-row {
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: 1.5rem;
    align-items: center;
    padding: 1.25rem 1.5rem;
    background-color: var(--bg-dark);
    border: 1px solid rgba(210, 10, 15, 0.2);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .pricing-row:hover {
    border-color: var(--primary-red);
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(210, 10, 15, 0.2);
  }

  .pricing-label {
    font-weight: 600;
    color: var(--text-light);
    font-size: 1rem;
  }

  .pricing-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-red);
    white-space: nowrap;
  }

  .pricing-minimum {
    font-size: 0.9rem;
    color: var(--text-muted);
    white-space: nowrap;
  }

  .pricing-disclaimers {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .pricing-disclaimers p {
    margin: 0.5rem 0;
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .pricing-note {
    margin-top: 1rem;
    padding: 1rem;
    background-color: rgba(245, 158, 11, 0.1);
    border: 1px solid rgba(245, 158, 11, 0.3);
    border-radius: 6px;
    font-size: 0.9rem;
    color: var(--text-light);
    line-height: 1.6;
  }

  .pricing-note strong {
    color: #f59e0b;
  }

  @media (max-width: 768px) {
    .pricing-row {
      grid-template-columns: 1fr;
      gap: 0.75rem;
      text-align: center;
    }

    .pricing-value {
      font-size: 1.25rem;
    }

    .pricing-section {
      padding: 3rem 1rem;
    }

    .location-selector {
      flex-direction: column;
    }

    .location-btn {
      width: 100%;
    }
  }
</style>

<script is:inline>
  (function() {
    function initLocationSelector() {
      const locationButtons = document.querySelectorAll('.location-btn');
      const pricingSections = document.querySelectorAll('.location-pricing');

      locationButtons.forEach(function(button) {
        button.addEventListener('click', function() {
          const selectedLocation = button.getAttribute('data-location');

          // Update active button
          locationButtons.forEach(function(btn) {
            btn.classList.remove('active');
          });
          button.classList.add('active');

          // Show/hide pricing sections
          pricingSections.forEach(function(section) {
            const htmlSection = section;
            if (htmlSection.getAttribute('data-location') === selectedLocation) {
              htmlSection.style.display = 'block';
            } else {
              htmlSection.style.display = 'none';
            }
          });
        });
      });
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initLocationSelector);
    } else {
      initLocationSelector();
    }
  })();
</script>

