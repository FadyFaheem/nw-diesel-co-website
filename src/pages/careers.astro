---
import BaseLayout from '../layouts/BaseLayout.astro';
import locationsData from '../data/locations.json';

const phoneNumber = locationsData.dfw.phone;
---

<BaseLayout 
  title="Careers | Join Our Team | NorthWestern Diesel"
  description="Join the NorthWestern Diesel team! We're hiring experienced diesel technicians and mobile service professionals in DFW. Competitive pay and benefits."
>
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-container">
      <h1 class="page-title">Careers</h1>
      <p class="page-subtitle">Join the NorthWestern Diesel Team</p>
    </div>
  </section>

  <!-- Careers Section -->
  <section class="careers-section">
    <div class="careers-container">
      <div class="careers-intro">
        <h2 class="section-title">We're Hiring</h2>
        <p class="section-description">
          NorthWestern Diesel is growing and looking for skilled diesel technicians and mobile service professionals. If you're passionate about diesel repair and want to work with a team that values quality, professionalism, and customer service, we want to hear from you.
        </p>
      </div>

      <div class="positions-grid">
        <div class="position-card">
          <div class="position-header">
            <h3 class="position-title">Mobile Diesel Technician</h3>
            <span class="position-location">DFW</span>
          </div>
          <div class="position-content">
            <p class="position-description">
              We're seeking experienced diesel technicians to join our mobile service team. You'll work independently, traveling to customer locations to diagnose and repair diesel engines and equipment.
            </p>
            <div class="position-requirements">
              <h4>Requirements:</h4>
              <ul>
                <li>Minimum 3 years diesel repair experience</li>
                <li>Valid driver's license and clean driving record</li>
                <li>Own tools preferred</li>
                <li>Strong diagnostic and problem-solving skills</li>
                <li>Excellent customer service skills</li>
              </ul>
            </div>
            <div class="position-benefits">
              <h4>Benefits:</h4>
              <ul>
                <li>Competitive hourly rate</li>
                <li>Performance bonuses</li>
                <li>Flexible scheduling</li>
                <li>Company vehicle provided</li>
                <li>Health insurance options</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="position-card">
          <div class="position-header">
            <h3 class="position-title">Fleet Service Technician</h3>
            <span class="position-location">DFW</span>
          </div>
          <div class="position-content">
            <p class="position-description">
              Join our fleet maintenance team providing scheduled maintenance and repairs for commercial vehicle fleets. This position offers consistent work and the opportunity to build long-term customer relationships.
            </p>
            <div class="position-requirements">
              <h4>Requirements:</h4>
              <ul>
                <li>2+ years diesel or heavy-duty truck experience</li>
                <li>Knowledge of fleet maintenance schedules</li>
                <li>Detail-oriented and organized</li>
                <li>Ability to work independently</li>
                <li>Good communication skills</li>
              </ul>
            </div>
            <div class="position-benefits">
              <h4>Benefits:</h4>
              <ul>
                <li>Competitive salary</li>
                <li>Regular hours</li>
                <li>Paid time off</li>
                <li>Tool allowance</li>
                <li>Career growth opportunities</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="apply-section">
        <h3 class="apply-title">How to Apply</h3>
        <p class="apply-description">
          Interested in joining our team? Please contact us with your resume and a brief cover letter explaining why you'd be a great fit for NorthWestern Diesel.
        </p>
        <div class="apply-buttons">
          <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-primary">
            Call {phoneNumber}
          </a>
          <a href="/contact/" class="btn-secondary">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <h2 class="cta-title">Ready to Join Our Team?</h2>
      <p class="cta-subtitle">Take the next step in your diesel repair career</p>
      <div class="cta-buttons">
        <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-primary">
          Call Now {phoneNumber}
        </a>
        <a href="/contact/" class="btn-secondary">
          Apply Now
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Hero */
  .page-hero {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 20% 50%,
      rgba(8, 112, 216, 0.1) 0%,
      transparent 50%
    );
    background-color: var(--bg-dark);
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
  }

  .page-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .page-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  /* Careers Section */
  .careers-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

  .careers-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .careers-intro {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-description {
    font-size: 1.1rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin: 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .positions-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .position-card {
    background-color: var(--bg-card);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid rgba(210, 10, 15, 0.2);
  }

  .position-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid rgba(210, 10, 15, 0.3);
  }

  .position-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--white);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .position-location {
    padding: 0.5rem 1rem;
    background-color: var(--primary-red);
    color: var(--white);
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .position-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .position-description {
    font-size: 1.05rem;
    color: var(--text-light);
    line-height: 1.7;
    margin: 0;
  }

  .position-requirements,
  .position-benefits {
    background-color: var(--bg-dark);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 3px solid var(--primary-blue);
  }

  .position-requirements h4,
  .position-benefits h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .position-requirements ul,
  .position-benefits ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .position-requirements li,
  .position-benefits li {
    color: var(--text-muted);
    line-height: 1.6;
    padding-left: 1.5rem;
    position: relative;
  }

  .position-requirements li::before,
  .position-benefits li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--primary-blue);
    font-weight: bold;
  }

  .apply-section {
    background-color: var(--bg-card);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid rgba(8, 112, 216, 0.2);
    text-align: center;
  }

  .apply-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .apply-description {
    font-size: 1.05rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin: 0 0 2rem 0;
  }

  .apply-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* CTA Section */
  .cta-section {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      rgba(8, 112, 216, 0.1) 100%
    );
    background-color: var(--bg-dark);
  }

  .cta-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-subtitle {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin: 0 0 2.5rem 0;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 15px rgba(210, 10, 15, 0.4);
    white-space: nowrap;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(210, 10, 15, 0.5);
    background: linear-gradient(135deg, var(--primary-red-dark), var(--primary-red));
  }

  .btn-secondary {
    padding: 1rem 2rem;
    background: transparent;
    color: var(--primary-blue);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border: 2px solid var(--primary-blue);
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .btn-secondary:hover {
    background: var(--primary-blue);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(8, 112, 216, 0.3);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .page-hero,
    .careers-section,
    .cta-section {
      padding: 3rem 1rem;
    }

    .position-header {
      flex-direction: column;
      gap: 1rem;
    }

    .apply-buttons,
    .cta-buttons {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
    }
  }
</style>


