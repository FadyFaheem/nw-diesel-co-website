---
import BaseLayout from '../layouts/BaseLayout.astro';
import locationsData from '../data/locations.json';

const phoneNumber = locationsData.dfw.phone;
---

<BaseLayout 
  title="Online Scheduling | Book Your Service | NorthWestern Diesel"
  description="Schedule your mobile diesel repair service online with NorthWestern Diesel. Book appointments for DFW area. Fast, easy, and convenient."
>
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-container">
      <h1 class="page-title">Online Scheduling</h1>
      <p class="page-subtitle">Book Your Service Appointment</p>
    </div>
  </section>

  <!-- Scheduling Section -->
  <section class="scheduling-section">
    <div class="scheduling-container">
      <div class="scheduling-intro">
        <h2 class="section-title">Schedule Your Service</h2>
        <p class="section-description">
          Book your mobile diesel repair service appointment online. Choose your preferred date and time, and we'll bring our professional service directly to your location.
        </p>
      </div>

      <div class="scheduling-content">
        <div class="scheduling-form-container">
          <div class="form-card">
            <h3 class="form-title">Request an Appointment</h3>
            <p class="form-subtitle">
              Fill out the form below or call us directly at <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="phone-link">{phoneNumber}</a>
            </p>
            
            <form class="scheduling-form" action="/contact/" method="get">
              <div class="form-group">
                <label for="service-type" class="form-label">Service Type</label>
                <select id="service-type" name="service-type" class="form-select" required>
                  <option value="">Select a service type</option>
                  <option value="emergency">Emergency Repair</option>
                  <option value="diagnostic">Diagnostic Service</option>
                  <option value="maintenance">Preventive Maintenance</option>
                  <option value="fleet">Fleet Service</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="location" class="form-label">Service Area</label>
                <select id="location" name="location" class="form-select" required>
                  <option value="">Select service area</option>
                  <option value="dfw">Dallas-Fort Worth (100-mile radius)</option>
                  {/* <option value="spokane">Spokane, WA (75-mile radius)</option> */}
                </select>
              </div>

              <div class="form-group">
                <label for="preferred-date" class="form-label">Preferred Date</label>
                <input type="date" id="preferred-date" name="preferred-date" class="form-input" required>
              </div>

              <div class="form-group">
                <label for="preferred-time" class="form-label">Preferred Time</label>
                <select id="preferred-time" name="preferred-time" class="form-select" required>
                  <option value="">Select time</option>
                  <option value="morning">Morning (8 AM - 12 PM)</option>
                  <option value="afternoon">Afternoon (12 PM - 5 PM)</option>
                  <option value="evening">Evening (5 PM - 8 PM)</option>
                </select>
              </div>

              <div class="form-group">
                <label for="equipment-type" class="form-label">Equipment Type</label>
                <input type="text" id="equipment-type" name="equipment-type" class="form-input" placeholder="e.g., Semi-truck, Generator, Farm Equipment" required>
              </div>

              <div class="form-group">
                <label for="description" class="form-label">Service Description</label>
                <textarea id="description" name="description" class="form-textarea" rows="4" placeholder="Describe the issue or service needed"></textarea>
              </div>

              <div class="form-note">
                <p>
                  <strong>Note:</strong> After submitting this form, we'll contact you to confirm your appointment time and provide an estimated quote. For emergency service, please call us directly.
                </p>
              </div>

              <button type="submit" class="btn-submit">
                Submit Request
              </button>
            </form>
          </div>
        </div>

        <div class="scheduling-info">
          <div class="info-card">
            <h3 class="info-title">Why Schedule Online?</h3>
            <ul class="info-list">
              <li>24/7 availability - schedule anytime</li>
              <li>Quick and convenient</li>
              <li>Get confirmation via phone or email</li>
              <li>Plan ahead for preventive maintenance</li>
            </ul>
          </div>

          <div class="info-card">
            <h3 class="info-title">Service Hours</h3>
            <div class="hours-list">
              <div class="hours-item">
                <span class="hours-day">Monday - Friday</span>
                <span class="hours-time">8:00 AM - 8:00 PM</span>
              </div>
              <div class="hours-item">
                <span class="hours-day">Saturday</span>
                <span class="hours-time">9:00 AM - 5:00 PM</span>
              </div>
              <div class="hours-item">
                <span class="hours-day">Sunday</span>
                <span class="hours-time">Emergency Only</span>
              </div>
            </div>
          </div>

          <div class="info-card">
            <h3 class="info-title">Need Immediate Service?</h3>
            <p class="info-text">
              For emergency repairs or urgent service needs, please call us directly. We offer 24/7 emergency response for critical situations.
            </p>
            <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-emergency">
              Call for Emergency Service
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Hero */
  .page-hero {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 20% 50%,
      rgba(8, 112, 216, 0.1) 0%,
      transparent 50%
    );
    background-color: var(--bg-dark);
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
  }

  .page-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .page-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  /* Scheduling Section */
  .scheduling-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

  .scheduling-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .scheduling-intro {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-description {
    font-size: 1.1rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin: 0;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .scheduling-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .form-card {
    background-color: var(--bg-card);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid rgba(210, 10, 15, 0.2);
  }

  .form-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--white);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .form-subtitle {
    font-size: 0.95rem;
    color: var(--text-muted);
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .phone-link {
    color: var(--primary-blue);
    text-decoration: none;
    font-weight: 600;
  }

  .phone-link:hover {
    text-decoration: underline;
  }

  .scheduling-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .form-input,
  .form-select,
  .form-textarea {
    padding: 0.75rem 1rem;
    background-color: var(--bg-dark);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: var(--text-light);
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.3s ease;
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--primary-blue);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-note {
    padding: 1rem;
    background-color: rgba(8, 112, 216, 0.1);
    border-left: 3px solid var(--primary-blue);
    border-radius: 4px;
  }

  .form-note p {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  .btn-submit {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    color: var(--white);
    border: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 15px rgba(210, 10, 15, 0.4);
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(210, 10, 15, 0.5);
    background: linear-gradient(135deg, var(--primary-red-dark), var(--primary-red));
  }

  .scheduling-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    background-color: var(--bg-card);
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid rgba(8, 112, 216, 0.2);
  }

  .info-title {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .info-list li {
    color: var(--text-muted);
    line-height: 1.6;
    padding-left: 1.5rem;
    position: relative;
  }

  .info-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--primary-blue);
    font-weight: bold;
  }

  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hours-item:last-child {
    border-bottom: none;
  }

  .hours-day {
    color: var(--text-light);
    font-weight: 500;
  }

  .hours-time {
    color: var(--text-muted);
  }

  .info-text {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .btn-emergency {
    display: block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 6px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(210, 10, 15, 0.3);
  }

  .btn-emergency:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(210, 10, 15, 0.5);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .scheduling-content {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .page-hero,
    .scheduling-section {
      padding: 3rem 1rem;
    }

    .form-card {
      padding: 1.5rem;
    }
  }
</style>


