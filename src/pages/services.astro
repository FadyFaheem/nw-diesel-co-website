---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import locationsData from '../data/locations.json';

const phoneNumber = locationsData.dfw.phone;
---

<BaseLayout 
  title="Mobile Diesel Services | NorthWestern Diesel"
  description="Comprehensive mobile diesel repair services including emergency repairs, fleet maintenance, diagnostics, welding, and more. Serving DFW and Spokane."
>
  <!-- Page Hero -->
  <section class="page-hero">
    <div class="hero-container">
      <h1 class="page-title">Our Services</h1>
      <p class="page-subtitle">Comprehensive mobile diesel repair solutions for fleets, owner-operators, and agricultural equipment</p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="services-section">
    <div class="services-container">
      <div class="services-grid">
        <ServiceCard
          title="Emergency Repairs"
          description="24/7 emergency roadside assistance when you need it most. Fast response times to get you back on the road quickly. Available for breakdowns, urgent repairs, and critical system failures."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
          </svg>`}
        />
        <ServiceCard
          title="Fleet Maintenance"
          description="Scheduled maintenance programs to keep your fleet running smoothly. Preventative care that saves time and money. Oil changes, filter replacements, inspections, and more."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="9" y1="3" x2="9" y2="21"></line>
            <line x1="3" y1="9" x2="21" y2="9"></line>
          </svg>`}
        />
        <ServiceCard
          title="Engine Diagnostics"
          description="Advanced diagnostic equipment to quickly identify issues. Expert repairs for all diesel engine systems including fuel systems, cooling systems, and emissions."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="6" x2="12" y2="14"></line>
            <circle cx="12" cy="17" r="0.5" fill="currentColor"></circle>
          </svg>`}
        />
        <ServiceCard
          title="Welding & Fabrication"
          description="On-site welding services for exhaust systems, frames, and custom fabrication needs. Professional welding for structural repairs and modifications."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
            <line x1="12" y1="22.08" x2="12" y2="12"></line>
          </svg>`}
        />
        <ServiceCard
          title="Hydraulic Systems"
          description="Repair and maintenance of hydraulic systems and components. Expert service for pumps, cylinders, hoses, and hydraulic fluid systems."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
          </svg>`}
        />
        <ServiceCard
          title="Electrical Systems"
          description="Diagnosis and repair of electrical issues and wiring problems. Complete electrical system troubleshooting and repair for all diesel equipment."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
          </svg>`}
        />
        <ServiceCard
          title="Preventative Maintenance"
          description="Regular maintenance schedules to prevent costly breakdowns. Oil changes, filter replacements, fluid checks, and comprehensive inspections."
          icon={`<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>`}
        />
        <ServiceCard
          title="Turbo & Exhaust"
          description="Turbocharger repair and replacement services. Exhaust system repairs including DPF cleaning, SCR systems, and muffler replacement."
          icon={`<img src="/turbosvg.svg" alt="Turbo" style="width: 64px; height: 64px; object-fit: contain; filter: brightness(0) saturate(100%) invert(15%) sepia(95%) saturate(6000%) hue-rotate(358deg) brightness(95%) contrast(115%);" />`}
        />
      </div>
    </div>
  </section>

  <!-- Service Areas Note -->
  <section class="service-areas-note">
    <div class="note-container">
      <h2 class="note-title">Service Availability</h2>
      <p class="note-text">
        Most services are available in both DFW and Spokane service areas. However, 
        Spokane services are currently limited - please call before requesting service 
        to confirm availability for your specific needs.
      </p>
      <div class="note-actions">
        <a href="/service-areas/" class="btn-secondary">View Service Areas</a>
        <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-primary">
          Call {phoneNumber}
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <h2 class="cta-title">Ready to Schedule Service?</h2>
      <p class="cta-subtitle">Get in touch today for fast, professional mobile diesel repair service</p>
      <div class="cta-buttons">
        <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-primary">
          Call Now {phoneNumber}
        </a>
        <a href="/contact/" class="btn-secondary">
          Request Service Form
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Hero */
  .page-hero {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 20% 50%,
      rgba(8, 112, 216, 0.1) 0%,
      transparent 50%
    );
    background-color: var(--bg-dark);
    text-align: center;
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .page-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .page-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Services Section */
  .services-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

  .services-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  /* Service Areas Note */
  .service-areas-note {
    padding: 4rem 2rem;
    background-color: var(--bg-card);
  }

  .note-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .note-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .note-text {
    font-size: 1.1rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .note-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* CTA Section */
  .cta-section {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      rgba(8, 112, 216, 0.1) 100%
    );
    background-color: var(--bg-dark);
  }

  .cta-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-subtitle {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin: 0 0 2.5rem 0;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 15px rgba(210, 10, 15, 0.4);
    white-space: nowrap;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(210, 10, 15, 0.5);
    background: linear-gradient(135deg, var(--primary-red-dark), var(--primary-red));
  }

  .btn-secondary {
    padding: 1rem 2rem;
    background: transparent;
    color: var(--primary-blue);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border: 2px solid var(--primary-blue);
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .btn-secondary:hover {
    background: var(--primary-blue);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(8, 112, 216, 0.3);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .page-hero,
    .services-section,
    .service-areas-note,
    .cta-section {
      padding: 3rem 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .note-actions,
    .cta-buttons {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
    }
  }
</style>

