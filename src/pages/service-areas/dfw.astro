---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PricingTable from '../../components/PricingTable.astro';
import locationsData from '../../data/locations.json';

const location = locationsData.dfw;
const phoneNumber = location.phone;
const email = 'donovanw@nwdieselco.com';

// LocalBusiness Schema for DFW location
const dfwSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "NorthWestern Diesel - DFW",
  "description": "Mobile diesel mechanic serving Dallas-Fort Worth and surrounding 100-mile radius. Fleet maintenance, emergency repairs, on-site service.",
  "url": Astro.site?.href ? `${Astro.site.href}service-areas/dfw/` : "https://nwdieselco.com/service-areas/dfw/",
  "telephone": phoneNumber.replace(/\D/g, ''),
  "email": email,
  "priceRange": "$$",
  "serviceArea": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "32.7767",
      "longitude": "-96.7970"
    },
    "geoRadius": {
      "@type": "Distance",
      "name": "100 miles"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Dallas-Fort Worth Metroplex"
  }
};
---

<BaseLayout 
  title="Mobile Diesel Repair DFW | Emergency Service | NorthWestern Diesel"
  description="Mobile diesel mechanic serving Dallas-Fort Worth and surrounding 100-mile radius. Fleet maintenance, emergency repairs, on-site service. Licensed & insured. Call now."
  schema={dfwSchema}
>
  <!-- Location Hero -->
  <section class="location-hero">
    <div class="hero-container">
      <h1 class="location-title">Mobile Diesel Repair in {location.displayName}</h1>
      <p class="location-subtitle">Professional on-site diesel repair services throughout the {location.radius}</p>
      <div class="hero-cta">
        <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-primary">
          Call Now {phoneNumber}
        </a>
        <a href="/contact/" class="btn-secondary">
          Request Service
        </a>
      </div>
    </div>
  </section>

  <!-- Service Area Map -->
  <section class="map-section">
    <div class="map-container">
      <h2 class="section-title">Service Area Coverage</h2>
      <p class="map-description">
        We provide mobile diesel repair services throughout the Dallas-Fort Worth metroplex 
        and surrounding areas within a {location.radius}. Our mobile service brings the shop 
        directly to your location, whether you're at a depot, job site, or roadside.
      </p>
      <div class="map-wrapper">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d214587.570470424!2d-97.041698!3d32.8203525!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c19f77b45974b%3A0x9bf9ddee6ee5ee!2sDallas-Fort%20Worth%20Metroplex!5e0!3m2!1sen!2sus!4v1234567890"
          width="100%"
          height="450"
          style="border:0; border-radius: 8px;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="DFW Service Area Map"
        ></iframe>
      </div>
      <p class="map-note">
        Service radius extends approximately 100 miles from the Dallas-Fort Worth metroplex center. 
        Travel fees may apply for locations outside the standard service area.
      </p>
    </div>
  </section>

  <!-- Available Services -->
  <section class="services-section">
    <div class="services-container">
      <h2 class="section-title">Available Services</h2>
      <p class="section-subtitle">Full-service mobile diesel repair for all your needs</p>
      <div class="services-list">
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
          </svg>
          <div>
            <h3>Emergency Repairs</h3>
            <p>24/7 roadside assistance for breakdowns and urgent repairs</p>
          </div>
        </div>
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="9" y1="3" x2="9" y2="21"></line>
            <line x1="3" y1="9" x2="21" y2="9"></line>
          </svg>
          <div>
            <h3>Fleet Maintenance</h3>
            <p>Scheduled maintenance programs to keep your fleet running efficiently</p>
          </div>
        </div>
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="6" x2="12" y2="14"></line>
            <circle cx="12" cy="17" r="0.5" fill="currentColor"></circle>
          </svg>
          <div>
            <h3>Engine Diagnostics</h3>
            <p>Advanced diagnostic equipment to quickly identify and resolve issues</p>
          </div>
        </div>
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
          </svg>
          <div>
            <h3>Welding & Fabrication</h3>
            <p>On-site welding for exhaust systems, frames, and custom fabrication</p>
          </div>
        </div>
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
          </svg>
          <div>
            <h3>Hydraulic Systems</h3>
            <p>Repair and maintenance of hydraulic systems and components</p>
          </div>
        </div>
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
          </svg>
          <div>
            <h3>Electrical Systems</h3>
            <p>Diagnosis and repair of electrical issues and wiring problems</p>
          </div>
        </div>
        <div class="service-item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="service-icon">
            <circle cx="12" cy="12" r="10"></circle>
            <circle cx="12" cy="12" r="6"></circle>
            <circle cx="12" cy="12" r="2"></circle>
          </svg>
          <div>
            <h3>Tire Services</h3>
            <p>Mobile tire services including tire replacement, repair, and balancing for commercial vehicles and heavy equipment</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <PricingTable />

  <!-- Customer Types -->
  <section class="customers-section">
    <div class="customers-container">
      <h2 class="section-title">Who We Serve</h2>
      <p class="section-subtitle">Mobile diesel repair services for all types of commercial and industrial equipment</p>
      <div class="customers-grid">
        <div class="customer-card">
          <h3>Fleet Operators</h3>
          <p>Keep your entire fleet running smoothly with scheduled maintenance and emergency response</p>
        </div>
        <div class="customer-card">
          <h3>Owner-Operators</h3>
          <p>Fast, reliable service to minimize downtime and keep you on the road</p>
        </div>
        <div class="customer-card">
          <h3>Construction Companies</h3>
          <p>On-site service for heavy equipment and construction vehicles</p>
        </div>
        <div class="customer-card">
          <h3>Agricultural Operations</h3>
          <p>Farm equipment repair and maintenance services</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <h2 class="cta-title">Need Service in {location.displayName}?</h2>
      <p class="cta-subtitle">Call us today or request service online</p>
      <div class="cta-buttons">
        <a href={`tel:${phoneNumber.replace(/\D/g, '')}`} class="btn-primary">
          Call Now {phoneNumber}
        </a>
        <a href="/contact/" class="btn-secondary">
          Request Service
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .location-hero {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      transparent 50%
    );
    background-color: var(--bg-dark);
    text-align: center;
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .location-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .location-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--text-muted);
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-red-dark));
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 15px rgba(210, 10, 15, 0.4);
    white-space: nowrap;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(210, 10, 15, 0.5);
    background: linear-gradient(135deg, var(--primary-red-dark), var(--primary-red));
  }

  .btn-secondary {
    padding: 1rem 2rem;
    background: transparent;
    color: var(--primary-blue);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border: 2px solid var(--primary-blue);
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .btn-secondary:hover {
    background: var(--primary-blue);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(8, 112, 216, 0.3);
  }

  .map-section {
    padding: 4rem 2rem;
    background-color: var(--bg-card);
  }

  .map-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    text-align: center;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .map-description {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .map-wrapper {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .map-note {
    text-align: center;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin: 1.5rem 0 0 0;
    font-style: italic;
  }

  .services-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

  .services-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    margin: 0 0 3rem 0;
    line-height: 1.6;
  }

  .services-list {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }

  .services-list > * {
    flex: 0 1 300px;
    max-width: 400px;
    min-width: 300px;
  }

  .service-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    background-color: var(--bg-card);
    border: 1px solid rgba(210, 10, 15, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .service-item:hover {
    border-color: var(--primary-red);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(210, 10, 15, 0.3);
  }

  .service-icon {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    color: var(--primary-red);
  }

  .service-item h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--white);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .service-item p {
    color: var(--text-muted);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .customers-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

  .customers-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .customers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .customer-card {
    background-color: var(--bg-card);
    border: 1px solid rgba(210, 10, 15, 0.2);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .customer-card:hover {
    border-color: var(--primary-blue);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(8, 112, 216, 0.3);
  }

  .customer-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--white);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .customer-card p {
    color: var(--text-muted);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .cta-section {
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(210, 10, 15, 0.1) 0%,
      rgba(8, 112, 216, 0.1) 100%
    );
    background-color: var(--bg-card);
  }

  .cta-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-subtitle {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin: 0 0 2.5rem 0;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .location-hero,
    .map-section,
    .services-section,
    .customers-section,
    .cta-section {
      padding: 3rem 1rem;
    }

    .hero-cta,
    .cta-buttons {
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
    }

    .services-list > * {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .customers-grid {
      grid-template-columns: 1fr;
    }

    .map-wrapper iframe {
      height: 300px;
    }
  }
</style>

