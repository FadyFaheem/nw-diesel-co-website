    margin: 0 0 2rem 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .map-wrapper {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .map-note {
    text-align: center;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin: 1.5rem 0 0 0;
    font-style: italic;
  }

  .services-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

