    width: 48px;
    height: 48px;
    flex-shrink: 0;
    color: var(--primary-red);
  }

  .service-item h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--white);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .service-item p {
    color: var(--text-muted);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

