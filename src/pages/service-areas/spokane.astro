    max-width: 1280px;
    margin: 0 auto;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.1rem;
    margin: 0 0 3rem 0;
    line-height: 1.6;
  }

  .services-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    background-color: var(--bg-card);
